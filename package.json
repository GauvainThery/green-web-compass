{
  "name": "green-web-compass",
  "version": "1.0.0",
  "description": "Green Web Compass - Analyze website environmental impact",
  "license": "ISC",
  "author": "",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "build": "pnpm --filter \"./libs/*\" build && pnpm --filter \"./apps/*\" build",
    "start": "pnpm --filter \"./apps/backend\" start",
    "lint": "pnpm --recursive --filter \"./apps/*\" lint",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive --filter \"./apps/*\" clean",
    "install-deps": "pnpm install"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/node": "^22.15.29"
  }
}
